<%- include ../public/header.ejs%>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include ../public/aslideleft.ejs%>
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">司机管理
                </li>
                <li class="active">司机列表
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    编辑司机
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/product/doEdit" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>id:<input type="text" name="_id" style="width: 50%" value="<%=list._id%>"/></li>
                                <li>  司机姓名: <input type="text" name="name_list" value="<%=list.name_list%>"/></li>
                                <li>  求职意向：<input type="text" name="intention" value="<%=list.intention%>"/></li>
                                <li>  驾龄: <input type="text" name="driving_age"value="<%=list.driving_age%>"/></li>
                                <li>  年龄: <input type="text" name="year" value="<%=list.year%>"/></li>
                                <li>  驾照: <input type="text" name="driving_license" value="<%=list.driving_license%>"/></li>
                                <li>  期望薪资: <input type="text" name="price" value="<%=list.price%>"/></li>
                                <li>  从业年限: <input type="text" name="entire_period" value="<%=list.entire_period%>"/></li>
                                <li>  公司:    <input type="text" name="company" value="<%=list.company%>"/></li>
                                <li>  头像:    <input type="file" name="pic" value="<%=list.company%>"/></li>
                                <li>
                                    描述:
                                    <textarea name="description" id="" cols="60" rows="8" ><%=list.description%></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>